<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/from_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="44dp"
        android:text="From Building"
        style="@style/RobotoTextViewStyle" />

    <Spinner
        android:id="@+id/from_building"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/from_title"
        android:layout_toRightOf="@+id/from_title"
        android:layout_toEndOf="@+id/from_title"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp" />

    <Spinner
        android:id="@+id/to_building"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/to_title"
        android:layout_alignLeft="@+id/from_building"
        android:layout_alignStart="@+id/from_building" />

    <TextView
        android:id="@+id/to_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="To Building"
        style="@style/RobotoTextViewStyle"
        android:layout_below="@+id/from_building"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            style="@style/RobotoButtonStyle"/>

        <Button
            android:id="@+id/find_route_button"
            style="@style/RobotoButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Find Route" />

    </LinearLayout>

</RelativeLayout>